<script>
	import $taxi from "@/common/Czc.js";
	import $privateTaxi from "@/common/Czcprivate.js"; //出租车专线
	import $downwindCar from "@/common/downwindCar.js"; //顺风车
	import uniIcons from "@/pages_CZC/components/CZC/uni-icons/uni-icons.vue";
	import uniSegmentedControl from "@/pages_CZC/components/CZC/uni-segmented-control/uni-segmented-control.vue";
	import hTimePicker from "@/pages_CZC/components/CZC/h-timePicker/h-timePicker.vue";
	import utils from "@/pages_CZC/components/CZC/shoyu-date/utils.filter.js"; //时间格式转换
	import uniPopup from "@/pages_CZC/components/CZC/uni-popup/uni-popup.vue";
	export default {
		components: {
			uniIcons,
			uniSegmentedControl,
			hTimePicker,
			uniPopup
		},
		data() {
			return {
				SpecialLineInf: '', //线路信息
				mapheight: '',
				selecttime: "点击选择时间",
				Passenger: [{
					userName: "选择乘车人"
				}],
				PassengerNum: 0, //人数
				countdown: '', //倒计时
				TaxiCost: 0,
				Distance: '',
				markers: [],
				startmarker: [],
				endmarker: [],
				StartLat: 25.1,
				StartLon: 118,
				EndLat: 25.33,
				EndLon: 118,
				polyline: [],
				map: '',
				startLonLat: '',
				endLonLat: '',
				VehicleType: "出租车",
				orderNumber: '', //订单号
				userInfo: '', //用户信息
				payType: [{
						typeName: '微信',
						typeColor: '#00C805',
						iconPath: '../../static/CZC/Wechatpay.png',
						value: 'wxpay',
						checked: true,
					}
					// {
					// 	typeName: '支付宝',
					// 	typeColor: '#0EBDFF',
					// 	iconPath: '../../static/CZC/Alipay.png',
					// 	value: 'alipay',
					// 	checked: false
					// }
				],
				payInformation: '',
				EstimatePrice: '', //价格
				downwindCarstartlocation: '',
				downwindCarendlocation: '',
				seat: '',
				driverID: '',
				lineID:'',
				departureTime:'',
				Price:'',
				vehicleNumber:'',
			}
		},
		onUnload() {
			uni.removeStorageSync("passengerList");
		},
		onLoad(option) {
			//动态设置高度
			uni.removeStorageSync("passengerList");
			var that = this;
			that.seat = option.seat;
			that.driverID = option.driverID;
			that.lineID = option.lineID;
			that.departureTime = option.departureTime;
			that.Price = option.Price;
			that.TaxiCost=option.Price;
			that.vehicleNumber=option.vehicleNumber;
			uni.getSystemInfo({
				//设置地图高度为可使用的高度
				success: function(res) {
					that.mapheight = res.windowHeight + 'px';
				}
			});
		},
		onReady() {
			var that = this;
			this.map = uni.createMapContext('map1', this);
		},
		onShow() {
			var that = this;
			that.Passenger = uni.getStorageSync('passengerList');
			that.downwindCarstartlocation = uni.getStorageSync("downwindCarstartlocation") || "";
			that.downwindCarendlocation = uni.getStorageSync("downwindCarendlocation") || "";
			if (that.Passenger.length > 0) {
				that.PassengerNum = that.Passenger.length;
			} else {
				that.Passenger = [{
					userName: "选择乘车人"
				}]
			}
			that.userInfo = uni.getStorageSync('userInfo') || '';
			that.setMarkers();
		},
		methods: {
			showToast: function(msg, icon = 'none') {
				uni.showToast({
					title: msg,
					icon: icon
				})
			},
			back: function() {
				var that = this;
				uni.navigateBack();
			},

			changeTime: function(e) { //选择预约时间
				this.selecttime = e;
			},
			selectPassenger: function() { //选择乘车人
				uni.navigateTo({
					url: '/pages/GRZX/passengerInfo?submitType=2&&limitNum=' + this.seat,
					animationType: 'pop-in',
					animationDuration: 200
				});
			},
			promptlyCall: function() { //立即预约、生成订单
				let that = this;
				if (this.Passenger[0].userName == '选择乘车人' || this.Passenger[0].userName == '') {
					uni.showToast({
						title: "请选择乘车人",
						icon: "none"
					})
				} else {
					uni.showLoading({
						title: '加载中',
						mask: true
					})
					uni.request({
						url: $downwindCar.Interface.AddHitchhikerOrder_Passenger.value,
						method: $downwindCar.Interface.AddHitchhikerOrder_Passenger.method,
						data: {
							LineID:that.lineID,
							StartLon: 	that.downwindCarstartlocation.lng ,
							StartLat: 	that.downwindCarstartlocation.lat ,
							EndLon: that.downwindCarendlocation.lng,
							EndLat: that.downwindCarendlocation.lat,
							StartAddress: that.downwindCarstartlocation.addressName, //起点
							EndAddress: that.downwindCarendlocation.addressName, //终点							
							Passengers: JSON.stringify(that.Passenger),
							VehicleType: that.vehicleType, //现在暂时只有出租车
							AppointmentTime: that.departureTime, //预约时间
							EstimatePrice: that.Price, //价格
							FactPrice: that.Price, //价格
							FactPayPrice: that.Price, //价格
							CouponPrice: that.Price, //价格
							UserId: that.userInfo.userId,
							PassengersPhone: that.userInfo.phoneNumber,
							userType: 0,
							DriverId:that.driverID,
							VehicleNumber:that.vehicleNumber,
							// EstimateDistance: that.SpecialLineInf.Distance, //预计里程
							// EstimateTime: that.SpecialLineInf.EstimatedTime, //预计时间分钟
						},
						success: function(res) {
							uni.hideLoading();
							console.log(res)
							if (res.data.status) {
								that.orderNumber = res.data.data.OrderNumber;
								// that.getPaymentInformation();
								// that.openBottomPopup();
								that.showToast(res.data.msg + "请在3分钟内完成支付");
								// that.countDown(180);
								uni.removeStorage({
									key: "passengerList"
								})
								uni.navigateTo({
									url:"DownWindCarPay?orderNumber=" + res.data.data.OrderNumber
								})
							} else if (!res.data.status) {
								that.showToast(res.data.msg);
								setTimeout(function() {
									uni.switchTab({
										url: "../../../pages/order/OrderList"
									})
								}, 1000)
							}
						},
						fail: function(res) {
							that.showToast('网络连接失败');
						}
					})
				}
			},
			setMarkers: function() { //设置始末标点
				var that = this;
				var startmarker = { //起点
					id: 0,
					longitude: that.downwindCarstartlocation.lng,
					latitude: that.downwindCarstartlocation.lat,
					title: '在这上车',
					zIndex: '1',
					iconPath: '../../static/CZC/Start.png',
					rotate: 0,
					width: 20,
					height: 20,
					anchor: {
						x: 0.5,
						y: 1
					},
					callout: {
						content: '在这上车',
						color: '#000000',
						fontSize: 10,
						borderRadius: 4,
						borderWidth: 1,
						borderColor: '#333300',
						bgColor: '#FFFFFF',
						padding: '5',
						display: 'ALWAYS'
					}
				};
				var endmarker = {
					id: 1,
					longitude: that.downwindCarendlocation.lng,
					latitude: that.downwindCarendlocation.lat,
					title: '在这下车',
					zIndex: '1',
					iconPath: '../../static/CZC/End.png',
					rotate: 0,
					width: 20,
					height: 20,
					anchor: {
						x: 0.5,
						y: 1
					},
					callout: {
						content: '在这下车',
						color: '#000000',
						fontSize: 10,
						borderRadius: 4,
						borderWidth: 1,
						borderColor: '#333300',
						bgColor: '#FFFFFF',
						padding: '5',
						display: 'ALWAYS'
					}
				};
				that.markers = [];
				that.startmarker = [];
				that.endmarker = [];
				that.markers.push(startmarker);
				that.markers.push(endmarker);
				that.showlocation = false;
				that.startLonLat=that.downwindCarstartlocation.lng+','+that.downwindCarstartlocation.lat,
				that.endLonLat=that.downwindCarendlocation.lng+','+that.downwindCarendlocation.lat,
				that.getDirectionDriving(that.startLonLat, that.endLonLat);
			},
			getDirectionDriving: function(startLonLat, endLonLat) {
				//调用高德api取得路径规划并绘制线路
				console.log(startLonLat)
				console.log(endLonLat)
				var that = this;
				uni.request({
					url: $taxi.InterfaceAddress[0],
					data: {
						startLonLat: startLonLat,
						endLonLat: endLonLat,
					},
					method: "GET",
					success: function(res) {
						console.log(res)
						//日后会加入定时，此处需清空
						that.points = [];
						that.polyline = [];
						var polylineArr = [];
						var points = [];
						polylineArr = res.data.Polyline;
						for (var i = 0; i < polylineArr.length; i++) {
							var arr = polylineArr[i].split(';');
							for (var j = 0; j < arr.length; j++) {
								points.push(arr[j]);
							}
						}
						//根据文件建设对象经纬度数组
						for (var i = 0; i < points.length; i++) {
							var arr = points[i].split(',');
							var obj = {
								longitude: arr[0],
								latitude: arr[1]
							}
							that.points.push(obj);
						}
						var obj = {
							points: that.points,
							width: 10,
							arrowLine: true,
							color: "#4BDC27",
							borderColor: "#8c918b",
						};
						that.polyline.push(obj);
						uni.hideLoading();
						setTimeout(function() {
							that.map.includePoints({
								padding: [700],
								points: [{
										latitude: that.downwindCarstartlocation.lat,
										longitude: that.downwindCarstartlocation.lng,
									},
									{
										longitude: that.downwindCarendlocation.lng,
										latitude: that.downwindCarendlocation.lat,
									}
								]
							});
							// console.log(that.map);
						}, 500)
					},
					fail: function(res) {
						uni.hideLoading();
						uni.showToast({
							title: "查询失败"
						})
						that.markers = [];
						console.log(res);
					}
				});
			},

		}

	}
</script>

