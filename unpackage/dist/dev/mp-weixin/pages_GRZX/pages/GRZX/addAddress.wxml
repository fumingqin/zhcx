<view class="content"><form data-event-opts="{{[['submit',[['formSubmit',['$event']]]],['reset',[['formReset',['$event']]]]]}}" bindsubmit="__e" bindreset="__e"><view class="receiverClass"><view class="fontStyle">收件人</view><input class="inputClass" placeholder="与证件姓名一致" name="receiver" value="{{address.receiver}}"/></view><view class="phoneClass"><view class="fontStyle">手机号码</view><input class="inputClass" placeholder="常用手机号" name="phoneNum" type="number" maxlength="11" value="{{address.phoneNum}}"/></view><view class="districtClass"><view class="fontStyle">所在地区</view></view><view class="addressClass"><view class="fontStyle">详细地址</view><input class="inputClass" placeholder="不需要填写省/市/区" name="detailAddress" value="{{address.detailAddress}}"/></view><view class="postalCodeClass"><view class="fontStyle">邮政编码</view><input class="inputClass" placeholder="请填写邮政编码" name="postalCode" type="number" maxlength="6" value="{{address.postalCode}}"/></view><view class="defaultClass"><view class="fontStyle">设置为默认地址</view><view class="checkBox"><checkbox-group name="defaultAddress"><label><checkbox checked="{{address.default}}" value="{{address.default}}"></checkbox></label></checkbox-group></view></view><button class="btndelete" form-type="reset">重置</button><button class="btnsubmit" form-type="submit">保存</button></form></view>