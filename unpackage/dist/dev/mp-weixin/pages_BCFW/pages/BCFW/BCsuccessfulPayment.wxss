page {
  background: #F5F5F5;
  padding-bottom: 40rpx;
}
.ob_background {
  position: absolute;
  width: 100%;
  height: 320rpx;
}
.ob_background image {
  width: 100%;
  height: 100%;
}
.cover-container {
  position: absolute;
  margin: 0 24rpx;
  margin-top: 180rpx;
  margin-bottom: 52rpx;
  width: 702rpx;
  height: 85%;
  background: #FFFFFF;
  box-shadow: 0px 0.2px 0px #aaa;
  border-radius: 16rpx;
  text-align: center;
}
.cover-container .okImage {
  width: 136rpx;
  height: 116rpx;
  margin-top: 35%;
}
.cover-container .title {
  margin: 30rpx 0;
  display: block;
  font-size: 48rpx;
  font-weight: bold;
}
.cover-container .content {
  display: block;
  font-size: 28rpx;
  color: #888;
}
.cover-container .buttonView {
  margin: 0 50rpx;
  margin-top: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  line-height: 100rpx;
}
.cover-container .buttonView .orderButton {
  width: 280rpx;
  height: 104rpx;
  font-size: 34rpx;
  background: #FC4646;
  border-radius: 16rpx;
  color: #fff;
}
.cover-container .buttonView .homeButton {
  margin-left: 40rpx;
  width: 280rpx;
  height: 104rpx;
  font-size: 34rpx;
  border-radius: 16rpx;
  color: #FC4646;
  border: 1px solid #FC4646;
}
.cover-container {
  margin-top: 64rpx;
}

