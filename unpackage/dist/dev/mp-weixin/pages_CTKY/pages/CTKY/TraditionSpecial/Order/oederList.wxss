/* 顶部tabbar */
.nav-bar {
  position: fixed;
  z-index: 10;
  width: 100%;
  white-space: nowrap;
  line-height: 90rpx;
  height: 90rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}
.nav-item {
  font-size: 30rpx;
  width: 33%;
  height: 90rpx;
  line-height: 90rpx;
  display: inline-block;
  text-align: center;
  color: #2C2D2D;
  position: relative;
}
.nav-item:after {
  content: '';
  width: 0;
  height: 0;
  border-bottom: 4rpx solid #FC4646;
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  -webkit-transition: .3s;
  transition: .3s;
}
.current {
  color: #FC4646;
}
.current:after {
  width: 50%;
}
/* 内容 */
.swiper-box {
  height: 100%;
  padding: 20rpx;
}
/* 可滚动区域 */
.panelScrollBox {
  margin-top: 100rpx;
  /* 由于在手机上会有安全区域,所以可滚动高度暂时设置为92% */
  height: 92%;
}
/* 预定日期 */
.reserveDate {
  padding: 0 10rpx;
  background-color: #06B4FD;
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 24rpx;
}
/* 订单信息 */
.orderContent {
  background-color: #FFFFFF;
  /* 设置圆角 */
  border-radius: 12rpx;
  /* 设置外边距 */
  margin-bottom: 20rpx;
}
/* 客车类型/状态 */
.headClass {
  /* 字体大小 */
  font-size: 26rpx;
  /* 字体颜色 */
  color: #333333;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  border-bottom: 1rpx solid #ECECEC;
}
.busImage {
  width: 40rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.headClass > view:first-child {
  font-size: 34rpx;
  color: #2C2D2D;
  font-weight: 700;
  padding-left: 20rpx;
}
.headClass > view:last-child {
  font-size: 28rpx;
  color: #666666;
  padding-right: 20rpx;
}
/* 时间/价格 */
.timePrice {
  padding-top: 20rpx;
  font-size: 26rpx;
}
/* 时间的图片 */
.timeImage {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
/* 时间 */
.timePrice > view:first-child {
  padding-left: 70rpx;
  line-height: 26rpx;
  color: #999999;
}
/* 价格 */
.timePrice > view:last-child {
  padding-right: 20rpx;
  color: #FC4646;
}
/* 上下车点 */
.Station {
  display: block;
  padding-left: 70rpx;
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 10rpx;
}
/* 上下车点的圆点 */
.circle {
  width: 10rpx;
  height: 10rpx;
  border-radius: 5rpx;
  margin-right: 10rpx;
}
.bottomView {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
/* 退票按钮 */
.bottomView button {
  height: 54rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  line-height: 54rpx;
  border: 0.1 solid #999999;
  color: #666666;
  background-color: #FFFFFF;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

